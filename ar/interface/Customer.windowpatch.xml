<?xml version="1.0" encoding="ISO-8859-1"?>
<windowpatch name="CustomerWindow" >
    <patch mode="replace" name="LegalPage" >
        <tabpage label="Legal" name="LegalPage" >
            <line>
                <column>
                    <text label="VAT Reg.Nr." fieldname="TaxRegNr" />
                    <pushbutton label="Control" name="checkTaxRegnr" height="20" />
                    <date label="VAT RegNr Due" fieldname="DueDateTaxRegNr" />
                    <text label="VAT Code" fieldname="VATCode" pastewindow="VATCodePasteWindow" />
                    <combobox label="IIBB Condition" fieldname="TaxReg2Type" >
                        <combooption label="Local" value="0" />
                        <combooption label="Convenio" value="1" />
                        <combooption label="Exento" value="2" />
                    </combobox>
                    <text label="Inscripto en" fieldname="TaxReg2Province" pastewindow="ProvincePasteWindow" />
                    <text label="Sales Tax Number" fieldname="TaxRegNr1" />
                    <text label="Exempt from Tax in" fieldname="ExemptFromTaxIn" pastewindow="ProvincePasteWindow" width="150" />
                    <line>
                        <text label="Perception Cat." fieldname="TaxCat1" />
                        <pushbutton label="OnLine Group Update" name="getPercepGroup" height="20" />
                    </line>
                </column>
                <column>
                    <combobox label="Document Type" fieldname="IDType" >
                        <combooption label="None" value="0" />
                        <combooption label="VAT Reg.Nr." value="1" />
                        <combooption label="Identification Nr" value="2" />
                        <combooption label="Police Id" value="3" />
                        <combooption label="Social Security Nr" value="4" />
                        <combooption label="LC" value="5" />
                        <combooption label="LE" value="6" />
                        <combooption label="Passport" value="7" />
                    </combobox>
                    <radiobutton label="Inscription" fieldname="TaxRegType" >
                        <radiooption label="Resp. Insc." value="0" />
                        <radiooption label="Con. Final" value="1" />
                        <radiooption label="IVA No Resp." value="2" />
                        <radiooption label="Exempt" value="3" />
                        <radiooption label="Monotributo" value="5" />
                        <radiooption label="International Exempt" value="6" />
                    </radiobutton>
                    <combobox label="Invoice Type" fieldname="DocType" >
                        <combooption label="A" value="0" />
                        <combooption label="B" value="1" />
                        <combooption label="C" value="2" />
                        <combooption label="E" value="3" />
                    </combobox>
                </column>
            </line>
        </tabpage>
    </patch>
</windowpatch>